  <!-- Begin Hidden Selectors -->
  <!-- Hidden reply selector -->
 <div>
    <div id='reply-selector' class='reply-selector'>
      <li><a onclick='selectText(this)' ><img src="/assets/img/text.png"></img></a></li>
      <li><a onclick='selectLink(this)' ><img src="/assets/img/link.png"></img></a></li>
      <li><a onclick='selectPhoto(this)'><img src="/assets/img/photo.png"></img></a></li>
      <li><a onclick='selectVideo(this)'><img src="/assets/img/video.png"></img></a></li>
    </div>
  </div>
<!-- Hidden text comment -->
<form id='reply-form' method=post>
<input id='reply-title' type='text' name="comments" placeholder='title...'></input></br>
<textarea id='comment-content' name="comments" cols=40 rows=6 placeholder='Type text here...'></textarea>
<P><button type='button' value="submit" onclick='submitNewComment(this)'>submit</button>
</form>

<!-- Hidden link comment -->
<form id='link-form'>
<input id='reply-title' type='text' name="comments" placeholder='title...'></input></br>
<input id='link-content' type='text' name="comments" placeholder='http://...'></input>
<button type='button' onclick='submitNewLink(this)' value="submit">submit</button>
</form>

<!-- End Hidden Selectors -->


